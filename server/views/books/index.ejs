<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite Books List </h3>
          <!-- ------------------------ -->
          <!-- FIX THE ADD BUTTON BELOW -->
          <!-- ------------------------ -->
          <a href="/books/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a book</a>
          <br><br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th class="text-center col-md-3">Title</th>
                  <th class="col-md-6">Description</th>
                  <th class="text-center col-md-1">Price</th>
                  <th class="text-center col-md-2">Author</th>
                  <th class="text-center col-md-1">Genre</th>
                  <th class="text-center col-md-2"></th>
                  <th class="text-center col-md-2"></th>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < BookList.length; count++) { %>
                <tr>
                  <td class="text-center col-md-3"><%= BookList[count].Title %></td>
                  <td class="col-md-6"><%= BookList[count].Description %></td>
                  <td class="text-center col-md-1">$<%= BookList[count].Price %></td>
                  <td class="text-center col-md-2"><%= BookList[count].Author %></td>
                  <td class="text-center col-md-1"><%= BookList[count].Genre %></td>

                  <td class="text-center col-md-2">
                    <!-- ------------------------ -->
                    <!-- ADD the EDIT BUTTON HERE -->
                    <!-- ------------------------ -->
                    <a href="/books/<%= BookList[count]._id %>" class="btn btn-primary btn-sm">
                    <i class="fas fa-pencil-alt"></i> Edit</a>
                  </td>

                  <td class="text-center col-md-2">
                    <!-- ------------------------ -->
                    <!-- ADD the DELETE BUTTON HERE -->
                    <!-- ------------------------ -->
                    <a href="/books/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i> Delete</a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


